<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f5e9"
    android:orientation="vertical"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hp_pc.mapit.AfterSignUp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/screen">
    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:id="@+id/r1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/back15" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VIEW YOUR QUESTS"
            android:id="@+id/viewquests"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:textSize="50sp"
            android:textColor="#fffdfff1"
            android:background="#b4000000" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:id="@+id/r2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/back11" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ADD NEW QUESTS"
            android:id="@+id/newquests"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:textColor="#ffffff"
            android:background="#a3000000" />
    </RelativeLayout>
</LinearLayout>
    <!--Progress Wheel-->
    <RelativeLayout
        android:id="@+id/rl_progress_wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        >

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            wheel:matProg_barColor="@color/background"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_fillRadius="true"
            />
    </RelativeLayout>

</LinearLayout>
