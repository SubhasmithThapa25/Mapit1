        android:nextFocusDown="@+id/signup_password"/>-->

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        wheel:met_textColorHint="#ffffff"
        android:inputType="textPassword"
        android:textColorHint="#99ffffff"
        android:textColor="#99ffffff"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Password"
        app:met_floatingLabelTextSize="15sp"
        app:met_baseColor="@color/white"
        android:id="@+id/signup_password"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/passwordlogo"
        android:drawablePadding="20dip"
        android:background="#5cbcc376"
        android:focusable="true"
        app:met_primaryColor="#ffffff"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@+id/signup_repassword"
        />
    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#99ffffff"
        android:textColor="#99ffffff"
        android:layout_marginLeft="50dp"
        android:id="@+id/signup_password"
