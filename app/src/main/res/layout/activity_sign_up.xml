<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"

    >
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:isScrollContainer="false"
    android:focusable="true"
    android:visibility="visible"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp_pc.mapit.SignUp"
    android:clickable="false"
    android:layout_margin="16dip"
    android:id="@+id/llsignup"
    android:visibility="visible"
    android:layout_gravity="center"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b5998"
    android:orientation="vertical"
    >
    <ImageView
    android:contentDescription="iv"
    android:id="@+id/iv_sup"
    android:clickable="true"
    android:layout_margin="20dp"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/signuptext"
    />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_sup"
        app:met_primaryColor="#ffffff"
        android:textColorHint="@color/white"
        wheel:met_textColorHint="#ffffff"
        app:met_baseColor="@color/white"
        android:textColor="@color/white"
        android:hint="Name"
        android:drawableLeft="@drawable/userlogo1"
        android:drawablePadding="20dp"
        app:met_floatingLabelText="Name"
        app:met_floatingLabel="highlight"
        android:layout_marginBottom="10dp"
        app:met_floatingLabelTextSize="15sp"
        android:background="#5cbcc376"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@+id/signup_email"/>
    <!--<EditText
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="40dp"
        android:id="@+id/signup_name"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/iv_sup"
