        android:background="#5cbcc376"
        android:hint="Name"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@+id/signup_email"/>-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        wheel:met_textColorHint="#ffffff"
        android:inputType="textEmailAddress"
        android:textColor="#99ffffff"
        android:layout_marginBottom="10dp"
        android:textColorHint="#99ffffff"
        android:id="@+id/signup_email"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="E-mail"
        app:met_floatingLabelTextSize="15sp"
        app:met_baseColor="@color/white"
        android:drawableLeft="@drawable/emaillogo1"
        android:drawablePadding="20dip"
        android:layout_below="@+id/signup_name"
        android:layout_centerHorizontal="true"
        android:background="#5cbcc376"
        android:focusable="true"
        app:met_primaryColor="#ffffff"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@+id/signup_password"

        />
    <!--<EditText
        android:layout_width="match_parent"
